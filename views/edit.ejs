<% include partials/header %>
<header class="masthead" style="background-image:url('/img/index_bg.png')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <span class="subheading">Edit a post below</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container" style="margin-top:100px">
    <div class="row">
        <div class="col-lg-10 col-md-8 mx-auto">
            <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title" style="font-family:'Open Sans','Helvetica Neue',Helvetica,Arial,sans-serif">Edit the title</label>
                    <input type="text" class="form-control" id="title" name="blog[title]" value="<%=blog.title%>" >
                </div>
                <div class="form-group">
                    <label for="image" style="font-family:'Open Sans','Helvetica Neue',Helvetica,Arial,sans-serif">Edit the image</label>
                    <input type="text" class="form-control" id="image" name="blog[image]" value="<%=blog.image%>" >
                </div>
                <div class="form-group">
                    <label for="post" style="font-family:'Open Sans','Helvetica Neue',Helvetica,Arial,sans-serif">Edit the Post</label>
                    <textarea class="form-control" id="post" name="blog[post]" rows="5"><%=blog.post%></textarea>
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer%>


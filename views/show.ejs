<% include partials/header %>
<header class="masthead" style="background-image:url('<%=blog.image%>'); height:500px">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1><%=blog.title%></h1>
                    <span class="meta">posted by: <%=blog.author%> on: <%=blog.date%> </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <p>
                <%=blog.post %>
            </p>
        </div>
    </div>
</div>


<% include partials/footer %>